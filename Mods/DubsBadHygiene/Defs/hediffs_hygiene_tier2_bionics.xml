<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<HediffDef ParentName="ImplantHediffBase">
		<defName>QuasarBladder</defName>
		<label>quasar bladder</label>
		<labelNoun>a quasar bladder</labelNoun>
		<description>An installed quasar bladder.</description>
		<descriptionHyperlinks>
			<ThingDef>QuasarBladder</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>QuasarBladder</spawnThingOnRemoved>
		<stages>
			<li>
				<statOffsets>
					<BladderRateMultiplier>-0.75</BladderRateMultiplier>
					<ThirstRateMultiplier>-0.75</ThirstRateMultiplier>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<ThingDef ParentName="BodyPartBionicBase">
		<defName>QuasarBladder</defName>
		<label>quasar bladder</label>
		<description>An advanced quasar-tech bladder. A chemical recycling system breaks down waste products from the body into molecules which are recycled with the remainder released as gas, the downside of this being that it gives the user gas.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallQuasarBladder</RecipeDef>
		</descriptionHyperlinks>
		<costList>
			<BOR_QuasarAlloy>10</BOR_QuasarAlloy>
			<BOR_Component_GenII>3</BOR_Component_GenII>
		</costList>
		<statBases>
			<Mass>2</Mass>
			<WorkToMake>20000</WorkToMake>
			<MarketValue>20000</MarketValue>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>16</Crafting>
			</skillRequirements>
			<researchPrerequisite MayRequire="dbhlitemode">HygieneBionics</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>Table_BOR_BionicCraftingStation_GenII</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>InstallQuasarBladder</defName>
		<label>install quasar bladder</label>
		<description>Install a quasar bladder.</description>
		<skillRequirements>
			<Medicine>16</Medicine>
		</skillRequirements>
		<descriptionHyperlinks>
			<ThingDef>QuasarBladder</ThingDef>
			<HediffDef>QuasarBladder</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing quasar bladder.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>QuasarBladder</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BOR_Medicine_GenII</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BOR_Picoclusters</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BOR_Medicine_GenII</li>
				<li>BOR_Picoclusters</li>
				<li>QuasarBladder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<addsHediff>QuasarBladder</addsHediff>
		<appliedOnFixedBodyParts>
			<li>Torso</li>
		</appliedOnFixedBodyParts>
	</RecipeDef>


