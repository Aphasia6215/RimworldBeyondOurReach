<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<HediffDef ParentName="ImplantHediffBase">
		<defName>StellarBladder</defName>
		<label>stellar bladder</label>
		<labelNoun>a stellar bladder</labelNoun>
		<description>An installed stellar bladder.</description>
		<descriptionHyperlinks>
			<ThingDef>StellarBladder</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>StellarBladder</spawnThingOnRemoved>
		<stages>
			<li>
				<statOffsets>
					<BladderRateMultiplier>-0.65</BladderRateMultiplier>
					<ThirstRateMultiplier>-0.65</ThirstRateMultiplier>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>

	<ThingDef ParentName="BodyPartBionicBase">
		<defName>StellarBladder</defName>
		<label>stellar bladder</label>
		<description>An advanced stellar-tech bladder. A chemical recycling system breaks down waste products from the body into molecules which are recycled with the remainder released as gas, the downside of this being that it gives the user gas.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallStellarBladder</RecipeDef>
		</descriptionHyperlinks>
		<costList>
			<BOR_Sunsteel>10</BOR_Sunsteel>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
		<statBases>
			<Mass>2</Mass>
			<WorkToMake>10000</WorkToMake>
			<MarketValue>10000</MarketValue>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<researchPrerequisite MayRequire="dbhlitemode">HygieneBionics</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>Table_SNS_BionicCraftingStation_GenI</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

	<RecipeDef ParentName="SurgeryInstallImplantBase">
		<defName>InstallStellarBladder</defName>
		<label>install stellar bladder</label>
		<description>Install a stellar bladder.</description>
		<workAmount>10000</workAmount>
		<descriptionHyperlinks>
			<ThingDef>StellarBladder</ThingDef>
			<HediffDef>StellarBladder</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing stellar bladder.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>StellarBladder</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BOR_MedicineI</li>
						<li>MedicineUltratech</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>BOR_Nanoclusters</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BOR_MedicineI</li>
				<li>MedicineUltratech</li>
				<li>BOR_Nanoclusters</li>
				<li>StellarBladder</li>
			</thingDefs>
		</fixedIngredientFilter>
		<addsHediff>StellarBladder</addsHediff>
		<appliedOnFixedBodyParts>
			<li>Torso</li>
		</appliedOnFixedBodyParts>
		<skillRequirements>
			<Medicine>12</Medicine>
		</skillRequirements>
	</RecipeDef>


