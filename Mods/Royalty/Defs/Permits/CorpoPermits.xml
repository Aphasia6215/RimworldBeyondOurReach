<Defs>

  <!-- ============================= Permits from corporate titles ============================= -->

  <RoyalTitlePermitDef>
    <defName>BOR_TradeSettlement_II</defName>
    <label>trade with kwazaari settlements</label>
  </RoyalTitlePermitDef>

  <RoyalTitlePermitDef>
    <defName>BOR_TradeOrbital_II</defName>
    <label>trade with kwazaari orbital traders</label>
  </RoyalTitlePermitDef>

  <RoyalTitlePermitDef>
    <defName>BOR_TradeCaravan_II</defName>
    <label>trade with kwazaari caravans</label>
  </RoyalTitlePermitDef>


  <!-- ============================= Faction permits ============================= -->

  <!-- Econ -->

  <RoyalTitlePermitDef Name="DropResourcesBase" Abstract="True">
    <workerClass>RoyalTitlePermitWorker_DropResources</workerClass>
    <faction>BOR_KwazaarBazaar</faction>
    <permitPointCost>1</permitPointCost>
    <cooldownDays>45</cooldownDays>
    <usableOnWorldMap>true</usableOnWorldMap>
    <royalAid>
      <targetingRange>39.9</targetingRange>
    </royalAid>
  </RoyalTitlePermitDef>
  <!-- sunsteel for juniors -->
  <RoyalTitlePermitDef ParentName="DropResourcesBase">
    <defName>BOR_SunsteelDrop</defName>
    <label>sunsteel drop</label>
    <description>Call for a drop of 250 sunsteel.</description>
    <minTitle>BOR_Junior</minTitle>
    <faction>BOR_KwazaarBazaar</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,0)</uiPosition>
    <royalAid>
      <itemsToDrop>
        <BOR_Sunsteel>250</BOR_Sunsteel>
      </itemsToDrop>
      <favorCost>4</favorCost>
    </royalAid>
  </RoyalTitlePermitDef>
  <!--  sunweave for juniors -->
  <RoyalTitlePermitDef ParentName="DropResourcesBase">
    <defName>BOR_FoodDrop</defName>
    <label>food drop</label>
    <description>Call for a drop of 20 packaged survival meals.</description>
    <minTitle>BOR_Junior</minTitle>
    <uiPosition>(0,1)</uiPosition>
    <royalAid>
      <itemsToDrop>
        <MealSurvivalPack>20</MealSurvivalPack>
      </itemsToDrop>
      <favorCost>4</favorCost>
    </royalAid>
  </RoyalTitlePermitDef>
  <!-- quasar alloy for associates -->
  <RoyalTitlePermitDef ParentName="DropResourcesBase">
    <defName>BOR_NeutroniumDrop</defName>
    <label>Neutronium drop</label>
    <description>Call for a drop of 5000 neutronium.</description>
    <minTitle>BOR_Junior</minTitle>
    <uiPosition>(0,4)</uiPosition>
    <royalAid>
      <itemsToDrop>
        <BOR_Neutronium>5000</BOR_Neutronium>
      </itemsToDrop>
      <favorCost>6</favorCost>
    </royalAid>
  </RoyalTitlePermitDef>
  <!-- quasar weave for associates -->
  <RoyalTitlePermitDef ParentName="DropResourcesBase">
    <defName>BOR_MedDrop</defName>
    <label>kwazaari med drop</label>
    <description>Call for a drop of 5 first kwaed kits.</description>
    <minTitle>BOR_Junior</minTitle>
    <uiPosition>(0,8)</uiPosition>
    <royalAid>
      <itemsToDrop>
        <BOR_MedicineII>5</BOR_MedicineII>
      </itemsToDrop>
      <favorCost>8</favorCost>
    </royalAid>
  </RoyalTitlePermitDef>

  <RoyalTitlePermitDef>
    <defName>BOR_CallLaborerTeam</defName>
    <label>call kwazaari labor team</label>
    <description>Call a group of 4 laborers to assist you for 4 days. These workers can only do general labor tasks. You can control them as though they were your own colonists. You are required to keep them safe.</description>
    <workerClass>RoyalTitlePermitWorker_CallLaborers</workerClass>
    <minTitle>BOR_Junior</minTitle>
    <faction>BOR_KwazaarBazaar</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,2)</uiPosition>
    <royalAid>
      <favorCost>4</favorCost>
      <pawnKindDef>BOR_Citizen_II</pawnKindDef>
      <pawnCount>4</pawnCount>
      <aidDurationDays>4</aidDurationDays>
      <targetingRange>44.9</targetingRange>
      <targetingRequireLOS>false</targetingRequireLOS>
    </royalAid>
    <cooldownDays>60</cooldownDays>
  </RoyalTitlePermitDef>

  <RoyalTitlePermitDef>
    <defName>BOR_CallLaborerGang</defName>
    <label>call kwazaari labor gang</label>
    <description>Call a group of 8 laborers to assist you for 4 days. These workers can only do general labor tasks. You can control them as though they were your own colonists. You are required to keep them safe.</description>
    <workerClass>RoyalTitlePermitWorker_CallLaborers</workerClass>
    <minTitle>BOR_Junior</minTitle>
    <faction>BOR_KwazaarBazaar</faction>
    <permitPointCost>1</permitPointCost>
    <prerequisite>BOR_CallLaborerTeam</prerequisite>
    <uiPosition>(1,2)</uiPosition>
    <royalAid>
      <favorCost>8</favorCost>
      <pawnKindDef>BOR_Citizen_II</pawnKindDef>
      <pawnCount>8</pawnCount>
      <aidDurationDays>4</aidDurationDays>
      <targetingRange>44.9</targetingRange>
      <targetingRequireLOS>false</targetingRequireLOS>
    </royalAid>
    <cooldownDays>60</cooldownDays>
  </RoyalTitlePermitDef>


