<?xml version="1.0" encoding="UTF-8"?>
<Patch>
    <!-- BOR_SunSteel -->

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases</xpath>
        <value>
            <Bulk>0.02</Bulk>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/stuffProps/categories</xpath>
        <value>
            <li>Metallic_Weapon</li>
            <li>Steeled</li>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases/StuffPower_Armor_Sharp</xpath>
        <value>
            <StuffPower_Armor_Sharp>4</StuffPower_Armor_Sharp>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases/StuffPower_Armor_Blunt</xpath>
        <value>
            <StuffPower_Armor_Blunt>6</StuffPower_Armor_Blunt>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases/StuffPower_Armor_Heat</xpath>
        <value>
            <StuffPower_Armor_Heat>0</StuffPower_Armor_Heat>
        </value>
    </Operation>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/stuffProps/statFactors</xpath>
        <value>
            <Mass>0.4</Mass>
            <MeleePenetrationFactor>2.6</MeleePenetrationFactor>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases/SharpDamageMultiplier</xpath>
        <value>
            <SharpDamageMultiplier>1.5</SharpDamageMultiplier>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BOR_SunSteel"]/statBases/BluntDamageMultiplier</xpath>
        <value>
            <BluntDamageMultiplier>1.5</BluntDamageMultiplier>
        </value>
    </Operation>

</Patch>