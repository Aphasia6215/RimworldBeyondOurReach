        <xpath>/Defs/ThingDef[defName="QC_QuantumHeater" or defName="QC_QuantumHeater_Large" or defName="QC_QuantumHeater_Generator" or defName="QC_QuantumCooler_Proto" or defName="QC_QuantumCooler" or defName="QC_QuantumCooler_Large" or defName="QC_QuantumCooler_Generator"]/designationCategory</xpath>
        <value>
            <designationCategory>BOR</designationCategory>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ResearchProjectDef[defName="QC_Research_QuantumCooler_I"]/baseCost</xpath>
        <value>
            <baseCost>20000</baseCost>
        </value>
