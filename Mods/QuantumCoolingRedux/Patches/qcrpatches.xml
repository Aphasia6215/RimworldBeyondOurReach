            <basePowerConsumption>10000</basePowerConsumption>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator" or defName="QC_QuantumHeater_Generator"]/comps/li[@Class="CompProperties_Power"]/basePowerConsumption</xpath>
        <value>
            <basePowerConsumption>-250000</basePowerConsumption>
        </value>
    </Operation>
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator" or defName="QC_QuantumHeater_Generator"]/comps/li[@Class="CompProperties_TempControl"]</xpath>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator"]/comps/li[@Class="CompProperties_HeatPusher"]/heatPerSecond</xpath>
        <value>
            <heatPerSecond>-200</heatPerSecond>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator"]/comps/li[@Class="CompProperties_HeatPusher"]/heatPerSecond</xpath>
        <value>
            <heatPerSecond>200</heatPerSecond>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator" or defName="QC_QuantumHeater_Generator"]/size</xpath>
        <value>
            <size>(10,10)</size>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator" or defName="QC_QuantumHeater_Generator"]/graphicData/drawSize</xpath>
        <value>
            <drawSize>(10,10)</drawSize>
        </value>
    </Operation>
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Generator" or defName="QC_QuantumHeater_Generator"]/graphicData</xpath>
        <value>
            <drawOffset>(0,3,-0.15)</drawOffset>
        </value>
    </Operation>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>ProxyHeat</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumHeater"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>3</radius>
                            <tempOutcome>21</tempOutcome>
                            <minTemperature>10</minTemperature>
                            <maxTemperature>30</maxTemperature>
                            <dependsOnPower>true</dependsOnPower>
                            <smeltSnowRadius>10</smeltSnowRadius>
                            <smeltSnowAtTemperature>3</smeltSnowAtTemperature>
                            <smeltSnowPower>0.001</smeltSnowPower>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumCooler"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>3</radius>
                            <tempOutcome>-21</tempOutcome>
                            <maxTemperature>0</maxTemperature>
                            <minTemperature>-21</minTemperature>
                            <dependsOnPower>true</dependsOnPower>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumHeater_Large"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>6</radius>
                            <tempOutcome>100</tempOutcome>
                            <minTemperature>10</minTemperature>
                            <maxTemperature>50</maxTemperature>
                            <dependsOnPower>true</dependsOnPower>
                            <smeltSnowRadius>10</smeltSnowRadius>
                            <smeltSnowAtTemperature>1</smeltSnowAtTemperature>
                            <smeltSnowPower>0.01</smeltSnowPower>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumCooler_Large"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>6</radius>
                            <tempOutcome>-100</tempOutcome>
                            <maxTemperature>-20</maxTemperature>
                            <minTemperature>-100</minTemperature>
                            <dependsOnPower>true</dependsOnPower>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumHeater_Generator"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>20</radius>
                            <tempOutcome>210</tempOutcome>
                            <minTemperature>20</minTemperature>
                            <maxTemperature>250</maxTemperature>
                            <dependsOnPower>true</dependsOnPower>
                            <smeltSnowRadius>40</smeltSnowRadius>
                            <smeltSnowAtTemperature>3</smeltSnowAtTemperature>
                            <smeltSnowPower>0.1</smeltSnowPower>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName = "QC_QuantumCooler_Generator"]/comps</xpath>
                    <value>
                        <li Class="ProxyHeat.CompProperties_TemperatureSource">
                            <radius>20</radius>
                            <tempOutcome>-210</tempOutcome>
                            <maxTemperature>-21</maxTemperature>
                            <minTemperature>-250</minTemperature>
                            <dependsOnPower>true</dependsOnPower>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ResearchProjectDef[defName="QC_Research_QuantumCooler_I"]/researchViewX</xpath>
        <value>
