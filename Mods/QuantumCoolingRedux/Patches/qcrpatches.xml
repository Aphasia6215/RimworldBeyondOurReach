                <Gold>25</Gold>
                <BOR_SunSteel>25</BOR_SunSteel>
                <Silver>250</Silver>
                <ComponentSpacer>5</ComponentSpacer>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Large" or defName="QC_QuantumHeater_Large"]/costList</xpath>
        <value>
            <costList>
                <Gold>100</Gold>
                <BOR_QuasarAlloy>125</BOR_QuasarAlloy>
                <Silver>775</Silver>
                <ComponentSpacer>10</ComponentSpacer>
                <BOR_Component_GenII>5</BOR_Component_GenII>
            </costList>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[defName="QC_QuantumCooler_Large" or defName="QC_QuantumHeater_Large"]/costList</xpath>
        <value>
            <costList>
                <Gold>50</Gold>
