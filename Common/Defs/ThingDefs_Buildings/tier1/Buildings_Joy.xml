    <graphicData>
      <texPath>BOR/Things/Building/tier1/chesstable</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawOffset>(0,0,0.05)</drawOffset>
      <shadowData>
        <volume>(0.65, 0.25, 0.6)</volume>
        <offset>(0, 0, -0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.09375,0.296875,0.796875,0.703125)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <minTechLevelToBuild>Ultra</minTechLevelToBuild>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
      <paintable>false</paintable>
    </building>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>4.167</Mass>
      <Flammability>0.833</Flammability>
      <Beauty>6</Beauty>
      <JoyGainFactor>1.5</JoyGainFactor>
    </statBases>
    <costList>
      <BOR_Sunsteel>70</BOR_Sunsteel>
    </costList>
    <pathCost>30</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>Misc2</designationHotKey>
    <designatorDropdown>BOR_JoyTables</designatorDropdown>
  </ThingDef>

