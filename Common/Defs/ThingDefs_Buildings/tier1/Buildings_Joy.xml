      <li>BuildingsJoy</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <building>
      <joyKind>Telescope</joyKind>
    </building>
    <costList>
      <BOR_Sunsteel>50</BOR_Sunsteel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <statBases>
      <MaxHitPoints>112</MaxHitPoints>
      <Flammability>0.833</Flammability>
