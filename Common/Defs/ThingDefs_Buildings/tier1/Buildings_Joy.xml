<Defs>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>BOR_GameOfUrBoard</defName>
    <label>Game-of-Ur holoboard</label>
    <description>Dating from 2500BC, this exciting yet infuriating board game can be played by one or two people. This particular holoboard is enhanced with holograms making the game more engaging and challenging. It trains intellectual skills.</description>
    <graphicData>
      <texPath>BOR/Things/Building/tier1/urboard/urboard</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
    </graphicData>
    <castEdgeShadows>false</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.20</fillPercent>
    <minTechLevelToBuild>Ultra</minTechLevelToBuild>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
      <paintable>false</paintable>
    </building>
    <statBases>
      <MaxHitPoints>135</MaxHitPoints>
      <WorkToBuild>9000</WorkToBuild>
      <Mass>1.67</Mass>
      <Flammability>0.83</Flammability>
      <Beauty>3</Beauty>
      <JoyGainFactor>1.2</JoyGainFactor>
    </statBases>
    <costList>
      <BOR_Sunweave>50</BOR_Sunweave>
      <BOR_Sunsteel>25</BOR_Sunsteel>
    </costList>
    <pathCost>14</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <designatorDropdown>BOR_JoyTables</designatorDropdown>
  </ThingDef>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>BOR_ChessTable</defName>
