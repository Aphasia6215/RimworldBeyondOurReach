        <li>1</li>
        <li>2</li>
        <li>3</li>
      </forceEyesVisibleForRotations>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Biocodable" />
    </comps>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

  <ThingDef ParentName="ApparelArmorHelmetPowerTenebralBase">
    <defName>BOR_Tenebral_Apparel_PowerArmorHelmet</defName>
