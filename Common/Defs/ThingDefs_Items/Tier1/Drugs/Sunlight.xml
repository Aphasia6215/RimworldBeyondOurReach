<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DrugBase">
    <defName>BOR_Sunlight</defName>
    <label>sunlight</label>
    <description>A soft, rare fruit. Sunlight tastes wonderful and produces a subtle mood-increasing chemical high. However, if eaten too often, it can generate a mild addiction.</description>
    <descriptionHyperlinks>
      <HediffDef>BOR_SunlightHigh</HediffDef>
      <HediffDef>BOR_SunlightTolerance</HediffDef>
      <HediffDef>BOR_SunlightAddiction</HediffDef>
    </descriptionHyperlinks>
    <tradeability>Sellable</tradeability>
    <socialPropernessMatters>true</socialPropernessMatters>
    <tickerType>Rare</tickerType>
    <graphicData>
      <texPath>Things/Item/Drug/Sunlight</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>22.5</MarketValue>
      <Mass>0.1</Mass>
      <DeteriorationRate>3</DeteriorationRate>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <techLevel>Ultra</techLevel>
    <ingestible>
      <baseIngestTicks>80</baseIngestTicks>
      <chairSearchRadius>4</chairSearchRadius>
      <preferability>DesperateOnly</preferability>
      <tasteThought></tasteThought>
      <foodType>Processed, Fluid</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.5</joy>
      <nurseable>false</nurseable>
      <drugCategory>Social</drugCategory>
      <canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BOR_SunlightHigh</hediffDef>
          <severity>0.50</severity>
          <toleranceChemical>BOR_Sunlight</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>BOR_SunlightTolerance</hediffDef>
          <toleranceChemical>BOR_Sunlight</toleranceChemical>
          <severity>0.032</severity>
          <divideByBodySize>true</divideByBodySize>
          <multiplyByGeneToleranceFactors>true</multiplyByGeneToleranceFactors>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>45</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
      <li Class="CompProperties_Drug">
        <chemical>BOR_Sunlight</chemical>
        <addictiveness>0.008</addictiveness>
        <minToleranceToAddict>0.225</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.08</existingAddictionSeverityOffset>
        <needLevelOffset>0.75</needLevelOffset>
        <listOrder>30</listOrder>
      </li>
    </comps>
    <allowedArchonexusCount>20</allowedArchonexusCount>
  </ThingDef>

  <HediffDef>
    <defName>BOR_SunlightHigh</defName>
    <label>sunlight warmth</label>
    <description>Sunlight chemicals in the bloodstream. It lifts the mood.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.55</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li />
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BOR_SunlightHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BOR_SunlightHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>sunlight warmth</label>
        <description>That sunlight makes me feel more relaxed, and gives me energy at the same time.</description>
        <baseMoodEffect>7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Sunlight addiction -->

  <ChemicalDef>
    <defName>BOR_Sunlight</defName>
    <label>sunlight</label>
    <addictionHediff>BOR_SunlightAddiction</addictionHediff>
    <toleranceHediff>BOR_SunlightTolerance</toleranceHediff>
    <onGeneratedAddictedToleranceChance>0</onGeneratedAddictedToleranceChance>
    <generateAddictionGenes>false</generateAddictionGenes>
  </ChemicalDef>

  <NeedDef ParentName="DrugAddictionNeedBase">
    <defName>Chemical_Sunlight</defName>
    <needClass>Need_Chemical</needClass>
    <label>sunlight</label>
    <description>Because of a sunlight addiction, this person needs to regularly consume sunlight to avoid withdrawal symptoms.</description>
    <listPriority>20</listPriority>
  </NeedDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>BOR_SunlightTolerance</defName>
    <label>sunlight tolerance</label>
    <description>A built-up tolerance to sunlight. The more severe this tolerance is, the more sunlight it takes to get the same effect.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.016</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>BOR_Sunlight</chemical>
      </li>
    </comps>
  </HediffDef>

  <HediffDef ParentName="AddictionBase">
    <defName>BOR_SunlightAddiction</defName>
    <label>sunlight addiction</label>
    <description>A chemical addiction to sunlight. Long-term presence of sunlight has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug. \nWithout regular doses of sunlight, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
    <hediffClass>Hediff_Addiction</hediffClass>
    <causesNeed>Chemical_Sunlight</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.15</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li> </li>
      <li>
        <label>withdrawal</label>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>BOR_SunlightWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>BOR_SunlightAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>sunlight withdrawal</label>
        <description>I feel heavy and cold all the time. I never thought I'd want a piece of fruit so much.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>