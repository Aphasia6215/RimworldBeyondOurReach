  <ThingDef ParentName="ArmorMachineableBase">
    <defName>BOR_Solar_Apparel_FlakVest</defName>
    <label>solar flak vest</label>
    <description>A vest with sunsteel armor plates inserted on the chest and back. While quite effective at deflecting gunshots and stabbing attacks against the chest, it does nothing to protect the limbs.</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <researchPrerequisites>
        <li>BOR_Research_Armor_GenI</li>
        <li>FlakArmor</li>
      </researchPrerequisites>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>220</displayPriority>
      <recipeUsers Inherit="False">
        <li>BOR_Bench_I</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.90</drawSize>
    </graphicData>
    <statBases>
      <WorkToMake>13500</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Heat>0.42</ArmorRating_Heat>
      <Insulation_Cold>2</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.08</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <costList>
      <BOR_Sunweave>30</BOR_Sunweave>
      <BOR_Sunsteel>60</BOR_Sunsteel>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>

